<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.connectmeproject">

     <uses-permission android:name="android.permission.INTERNET"/>
     <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConnectMeProject">
        <activity
            android:name=".SpeakToText"
            android:exported="false" />
        <activity
            android:name=".LanguageTransalate"
            android:exported="false" />
        <activity
            android:name=".SearchActivity"
            android:exported="false" />
        <activity
            android:name=".Translate"
            android:exported="false"
            android:label="@string/title_activity_translate"
            android:theme="@style/Theme.ConnectMeProject.NoActionBar" />
        <activity
            android:name=".Learn"
            android:exported="false"
            android:label="@string/title_activity_learn"
            android:theme="@style/Theme.ConnectMeProject.NoActionBar" />
        <activity
            android:name=".SignIn"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SpeechLayoutActivity"
            android:exported="false" />
    </application>

</manifest>